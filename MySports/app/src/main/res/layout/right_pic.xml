<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/right_n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/right_pic"
        android:layout_alignRight="@+id/right_pic"
        android:padding="10dp"
        android:text="azxx"
        />

    <ImageView
        android:id="@+id/right_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/right_t1"
        android:background="@drawable/app_lvjian_chat_right"
        android:padding="10dp"
        android:text="zhengzhengyang" />


    <com.example.mysports.util.CircleImageView
        android:layout_margin="10dp"
        android:id="@+id/right_t1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:src="@drawable/app_lvjian_message_background" />

    <TextView
        android:id="@+id/right_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/right_pic"
        android:layout_alignBottom="@+id/right_pic"
        android:textColor="@color/colorGray3"
        android:text="time"
        />

</RelativeLayout>